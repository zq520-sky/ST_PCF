    <!-- 日志记录 -->
    <aop:config expose-proxy="true">
        <aop:pointcut id="ctrlPt" expression="execution(* com.samton.*.*.controller..*.*(..)) || execution(* com.samton.*.*.*.controller..*.*(..))" />
        <aop:aspect  ref="accessLogAop" order="2" >
           <aop:around pointcut-ref="ctrlPt" method="recordLog"/>
        </aop:aspect>
    </aop:config>
    
</beans>