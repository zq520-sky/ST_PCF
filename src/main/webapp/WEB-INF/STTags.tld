<?xml version="1.0" encoding="UTF-8"?>
<taglib version="2.0" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee web-jsptaglibrary_2_0.xsd">
	<tlib-version>2.0</tlib-version>
	<short-name>st</short-name>
	<uri>/stisp-tags</uri>
	<tag>
		<name>dict</name>
		<tag-class>com.samton.platform.framework.tld.DictTag</tag-class>
		<body-content>empty</body-content>
		<description>字典下拉框</description>
		<attribute>
			<description>下拉框的id</description>
			<name>id</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>下拉框的name</description>
			<name>name</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>下拉框的默认选择通过value</description>
			<name>selectValue</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>下拉框的默认选择通过Text</description>
			<name>selectText</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>下拉框的默认选择值</description>
			<name>defaultValue</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>下拉框的默认显示文本</description>
			<name>defaultText</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>对应的字典组</description>
			<name>dictGroupId</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>显示控件样式</description>
			<name>style</name>
			<rtexprvalue>false</rtexprvalue>
		</attribute>
		<attribute>
			<description>显示控件Class</description>
			<name>className</name>
			<rtexprvalue>false</rtexprvalue>
		</attribute>
		<attribute>
			<description>过滤条件</description>
			<name>condition</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>onchange事件触发的JS</description>
			<name>onchange</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
	</tag>

	<tag>
		<name>commonSelect</name>
		<tag-class>com.samton.platform.framework.tld.CommonSelectTag</tag-class>
		<body-content>empty</body-content>
		<description>通用下拉框</description>
		<attribute>
			<description>下拉框的id</description>
			<name>id</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>下拉框的name</description>
			<name>name</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>显示控件样式</description>
			<name>style</name>
			<rtexprvalue>false</rtexprvalue>
		</attribute>
		<attribute>
			<description>显示控件Class</description>
			<name>className</name>
			<rtexprvalue>false</rtexprvalue>
		</attribute>
		<attribute>
			<description>onchange事件触发的JS</description>
			<name>onchange</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>下拉框的默认选择值</description>
			<name>defaultValue</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>下拉框的默认显示文本</description>
			<name>defaultText</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>下拉框的默认选择的value</description>
			<name>selectValue</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>查询的表名</description>
			<name>table</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>作为value的字段名</description>
			<name>val</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>作为text的字段名</description>
			<name>text</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>作为where的条件</description>
			<name>where</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>用于排序的字段名</description>
			<name>order</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>直接传入查询语句，返回值必须是val和text</description>
			<name>sql</name>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<description>是否包含默认选项，默认true</description>
			<name>showDefault</name>
			<rtexprvalue>false</rtexprvalue>
		</attribute>
	</tag>
</taglib>
