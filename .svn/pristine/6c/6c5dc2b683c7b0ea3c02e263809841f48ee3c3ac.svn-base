			function tasksetyes(){
				layer.open({
					type: 2,
					skin: 'layui-layer-demo', //样式类名
					closeBtn: 1, //不显示关闭按钮
					scrollbar:true,
					// anim: 2,
					// shadeClose: true, //开启遮罩关闭
					area: ['920px', '620px'], //宽高
					title:'查看任务详情',
					content: '${ctx.path}/resources/views/task/taskGetAdd.jsp'
				});
			}
			function taskall(){
				layer.open({
					type: 1,
					skin: 'layui-layer-rim', //加上边框
					title: '任何分配比例设定',
					area: ['620px', '420px'], //宽高
					content: $('#tasksetmanage'),
					// fixed: true,
					btn: ['确定','取消'], //按钮
					yes: function(index, layero){
						//按钮【按钮一】的回调
					}
					,btn2: function(index, layero){
						//按钮【按钮二】的回调
						//return false 开启该代码可禁止点击该按钮关闭
					}
				});
			}

			function taskweedend(){
				layer.open({
					type:1,
					skin: 'layui-layer-rim', //加上边框
					title: '选择周末负责人',
					area: ['420px', ''], //宽高
					// fixed: true,
					btn: ['确定','取消'], //按钮
					yes: function(index, layero){
						//按钮【按钮一】的回调
					}
					,btn2: function(index, layero){
						//按钮【按钮二】的回调
						//return false 开启该代码可禁止点击该按钮关闭
					},
					content: $('#taskweedmanager').html(),
				});
			}
			function diag() {
				if(value='20%'){
					$("#inputtask").hide();
					$("#inputtasked").show();
				}
				else{
					$("#inputtasked").hide();
					$("#inputtask").show();
				}
			}
			$(function() {
				$("#inputtasked").hide();
				//提交回调
				editValidate = $("#editForm").validate({
					submitHandler : function(form) {
						$(form).ajaxSubmit({
							//表单提交成功后的回调
							success : function(responseText, statusText, xhr, $form) {
								if (responseText.rs > 0) {
									top.toastr.success("保存成功！");
									$("#editForm").reload();
								}
							}
						});
					}
				});

			});


		</script>
