  <!--买家账号查询列表-->
  <sql id="Base_Column_List_Vo" >
    a.platform_type, a.buyer_code, a.buyer_name, a.user_name, a.address, a.city, a.province,
    a.postcode, a.register_time, a.last_brush_time, a.is_forbid,
