<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>ST_WebProject</display-name>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:conf/log4j/log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>300000</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:spring-container.xml</param-value>
	</context-param>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>vs.root</param-value>
	</context-param>
	<error-page>
		<error-code>404</error-code>
		<location>/resources/platform/views/error/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/resources/platform/views/error/500.jsp</location>
	</error-page>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.samton.platform.framework.init.InitServerContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>springmvc</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:spring-mvc.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>springmvc</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>webContextFilter</filter-name>
		<filter-class>com.samton.platform.framework.context.WebContextFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>webContextFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<async-supported>true</async-supported>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>illegalCharacterFilter</filter-name>
		<filter-class>com.samton.platform.framework.filter.IllegalCharacterFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>illegalCharacterFilter</filter-name>
		<url-pattern>/platform/*</url-pattern>
	</filter-mapping>	
	<filter-mapping>
		<filter-name>illegalCharacterFilter</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>illegalCharacterFilter</filter-name>
		<url-pattern>/manage/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>currentFilter</filter-name>
		<filter-class>com.samton.platform.framework.filter.CurrentFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>currentFilter</filter-name>
		<url-pattern>/platform/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>currentFilter</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>currentFilter</filter-name>
		<url-pattern>/manage/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>currentFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>platformPmFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetFilterLifecycle</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>platformPmFilter</filter-name>
		<url-pattern>/platform/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>platformPmFilter</filter-name>
		<url-pattern>/resources/platform/views/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>platformPmFilter</filter-name>
		<url-pattern>/resources/views/*</url-pattern>
	</filter-mapping>

	<!-- XSS开始
	<filter>
		<filter-name>XSS</filter-name>
		<filter-class>com.xssfilter.filter.XssFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>XSS</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	XSS结束 -->

	<welcome-file-list>
		<welcome-file>resources/platform/views/login.jsp</welcome-file>
	</welcome-file-list>
</web-app>