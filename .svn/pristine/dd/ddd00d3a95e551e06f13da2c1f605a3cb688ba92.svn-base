//取消
function cancel(id, orderCode) {
    if (Number(id)) {
        var msg = "确定取消订单【" + orderCode + "】吗？";
        layer.confirm(msg, {
            icon : 3,
            title : "提示信息"
        }, function(index) {
            $.get(ctx.path + "/manage/cust/order/cancel"+ ctx.bizSuffix + "?orderId=" + id + "&orderCode=" + orderCode, function(result) {
                if (result.rs == 1) {
                    top.toastr.success("取消订单【" + orderCode + "】成功！");
                    doSearch();
                    //刷新表单
                }
            }, "json");
            layer.close(index);
        });
    } else {
        top.toastr.error("数据异常！");
    }
}

//删除
